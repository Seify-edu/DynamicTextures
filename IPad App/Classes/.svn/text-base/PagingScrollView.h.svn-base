// Обычный UIScrollView не позволяет задавать произвольную ширину страницы
// для paging. В данном классе эта возможность реализована. Отсюда:
// http://stackoverflow.com/a/3018776

#import <UIKit/UIKit.h>

@interface PagingScrollView : UIScrollView {
    
    UIEdgeInsets responseInsets;
}

@property (nonatomic, assign) UIEdgeInsets responseInsets;

@end
